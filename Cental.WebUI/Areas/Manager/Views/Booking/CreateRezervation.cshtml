@model CreateBookingDto
@{
    ViewData["Title"] = "Create Reservation";
    Layout = "~/Areas/Manager/Views/ManagerLayout/Index.cshtml";
}

<form method="post">

    <label>Select Your Vehicle</label>
    <select asp-for="CarId" class="form-control">
        <option selected>Select your vehicle</option>
        @foreach (var car in ViewBag.SelectedCarList)
        {
            <option value="@car.Value">@car.Text</option>
        }
    </select>
    <br />

    <label>Pick-up Location</label>
    <span class="fas fa-map-marker-alt"></span>
    <input asp-for="PickUpLocation" class="form-control" type="text" placeholder="Enter a city or airport">
    <br />

    <label>Drop-off Location</label>
    <span class="fas fa-map-marker-alt"></span>
    <input asp-for="DropOffLocation" class="form-control" type="text" placeholder="Enter a city or airport">
    <br />

    <label>Pick-up Date</label>
    <span class="fas fa-calendar-alt"></span>
    <input asp-for="PickUpDateTime" class="form-control" type="date" min="2024-01-01" value="2024-01-01" />
    <br />

    <label>Drop-off Date</label>
    <span class="fas fa-calendar-alt"></span>
    <input asp-for="DropOffDateTime" class="form-control" type="date" min="2024-01-01" value="2024-01-01" />
    <br />

    <div class="text-center">
        <button class="btn btn-success">Add Reservation</button>
    </div>

</form>
