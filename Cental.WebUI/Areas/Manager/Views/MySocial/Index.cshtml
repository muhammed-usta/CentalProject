@model List<ResultUserSocialDto>
@{
    ViewData["Title"] = "Social Medias";
    Layout = "~/Areas/Manager/Views/ManagerLayout/Index.cshtml";
}
@{
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Social Medias</th>
        <th>Title</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>
                <a href="@item.SocialMediaUrl" target="_blank"> <i class="@item.Icon"> </i>@item.Title</a>
            </td>
            <td>@item.Title</td>


            <td><button onclick="deleteSocial(@item.UserSocialId)" class="btn btn-danger"><i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateSocial" asp-route-id="@item.UserSocialId" class="btn btn-info"> <i class="fa fa-pen"></i> </a> </td>

        </tr>
    }
</table>
<a asp-action="CreateSocial" asp-controller="MySocial" asp-area="Manager" class="btn btn-primary"><i class="fa fa-plus-square"></i>Add a new Social Media </a>

<script>

        function deleteSocial(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/Manager/MySocial/DeleteSocial/" + id;


                }
            });


        }


</script>

