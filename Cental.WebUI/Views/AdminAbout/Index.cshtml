@model List<ResultAboutDto>
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Our Vision</th>
        <th>Our Mission</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
        <td>@count</td>
        <td>@item.Vision</td>
        <td>@item.Mission</td>
            <td><button onclick="deleteAbout(@item.AboutId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateAbout" asp-route-id="@item.AboutId" class="btn btn-info"> <i class="fa fa-pen"></i> </a> </td>
       
        </tr>
    }
</table>
<a asp-action="CreateAbout" asp-controller="AdminAbout" class="btn btn-primary"><i class="fa fa-plus-square"></i>Add a new About Us </a>

<script>

        function deleteAbout(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminAbout/DeleteAbout/" + id;


                }
            });


        }


</script>





