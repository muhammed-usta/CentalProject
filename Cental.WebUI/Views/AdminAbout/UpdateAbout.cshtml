@model UpdateAboutDto
@{
    ViewData["Title"] = " New Update About Us Section";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AboutId"  />
    <div class="row mb-3">
        <div class="col-md-6">
            <label for="ImageFile" class="form-label">Upload First Image</label>
            <input type="file"
                   id="ImageFile"
                   asp-for="ImageFile"
                   accept="image/png, image/jpg, image/jpeg"
                   class="form-control" />

          
            <img id="imagePreview"
                 src=""
                 alt="First Image Preview"
                 class="img-fluid mt-2 d-none"
                 style="max-height: 200px;" />
        </div>

    
        <div class="col-md-6">
            <label for="ImageFile2" class="form-label">Upload Second Image</label>
            <input type="file"
                   id="ImageFile"
                   asp-for="ImageFile"
                   accept="image/png, image/jpg, image/jpeg"
                   class="form-control" />

            <img id="imagePreview2"
                 src=""
                 alt="Second Image Preview"
                 class="img-fluid mt-2 d-none"
                 style="max-height: 200px;" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6 text-center">
            <label class="form-label">Current First Image</label>
            <div>
                <img src="@Model.ImageUrl1"
                     alt="Current Image 1"
                     class="img-thumbnail"
                     style="width: 100px; height: 100px;" />
            </div>
        </div>

        <div class="col-md-6 text-center">
            <label class="form-label">Current Second Image</label>
            <div>
                <img src="@Model.ImageUrl2"
                     alt="Current Image 2"
                     class="img-thumbnail"
                     style="width: 100px; height: 100px;" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Our Vision</label>
        <input type="text" asp-for="Vision" class="form-control" />
        <span class="text-danger" asp-validation-for="Vision"></span>
    </div>

    <div class="form-group">
        <label>Our Mission</label>
        <input type="text" asp-for="Mission" class="form-control" />
        <span class="text-danger" asp-validation-for="Mission"></span>
    </div>

    <div class="form-group">
        <label>Top Description</label>
        <input type="text" asp-for="Description1" class="form-control" />
        <span class="text-danger" asp-validation-for="Description1"></span>
    </div>

    <div class="form-group">
        <label>Sub Description</label>
        <input type="text" asp-for="Description2" class="form-control" />
        <span class="text-danger" asp-validation-for="Description2"></span>
    </div>

    <div class="form-group">
        <label>Establishment Year</label>
        <input type="number" asp-for="StartYear" class="form-control" />
        <span class="text-danger" asp-validation-for="StartYear"></span>
    </div>

    <div class="form-group">
        <label>Image 1</label>
        <input type="text" asp-for="ImageUrl1" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl1"></span>
    </div>

    <div class="form-group">
        <label>Image 2</label>
        <input type="text" asp-for="ImageUrl2" class="form-control" />
        <span class="text-danger" asp-validation-for="ImageUrl2"></span>
    </div>

    <div class="form-group">
        <label>Item 1</label>
        <input type="text" asp-for="Item1" class="form-control" />
        <span class="text-danger" asp-validation-for="Item1"></span>
    </div>

    <div class="form-group">
        <label>Item 2</label>
        <input type="text" asp-for="Item2" class="form-control" />
        <span class="text-danger" asp-validation-for="Item2"></span>
    </div>

    <div class="form-group">
        <label>Item 3</label>
        <input type="text" asp-for="Item3" class="form-control" />
        <span class="text-danger" asp-validation-for="Item3"></span>
    </div>

    <div class="form-group">
        <label>Item 4</label>
        <input type="text" asp-for="Item4" class="form-control" />
        <span class="text-danger" asp-validation-for="Item4"></span>
    </div>

    <div class="form-group">
        <label>Name Surname</label>
        <input type="text" asp-for="NameSurname" class="form-control" />
        <span class="text-danger" asp-validation-for="NameSurname"></span>
    </div>

    <div class="form-group">
        <label>Title</label>
        <input type="text" asp-for="JobTitle" class="form-control" />
        <span class="text-danger" asp-validation-for="JobTitle"></span>
    </div>

    <div class="form-group">
        <label for="ProfileImageFile" class="form-label">Upload Profile Image</label>
        <input type="file"
               id="ProfileImageFile"
               accept="image/png, image/jpg, image/jpeg"
               class="form-control" />

        <img id="profileImagePreview"
             src=""
             alt="Profile Image Preview"
             class="img-fluid mt-2 d-none"
             style="max-height: 200px;" />
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var profileImageFileInput = document.getElementById("ProfileImageFile");
            var profileImagePreview = document.getElementById("profileImagePreview");

            if (profileImageFileInput) {
                profileImageFileInput.addEventListener("change", function (e) {
                    if (e.target.files && e.target.files[0]) {
                        var reader = new FileReader();
                        reader.onload = function (event) {
                            profileImagePreview.src = event.target.result;
                            profileImagePreview.classList.remove("d-none");
                        };
                        reader.readAsDataURL(e.target.files[0]);
                    }
                });
            }
        });
    </script>


    <div class="form-group">
        <label>Current Profile Image</label>
        <div>
            <img src="@Model.ProfilePicture"
                 alt="Current Profile Image"
                 class="img-thumbnail"
                 style="width: 100px; height: 100px;" />
        </div>
    </div>


    <div class="form-group">
        <button class="btn btn-outline-primary"><i class="fa fa-save"></i> Update</button>
    </div>

    <div>
        <p class="text-danger">
            @Html.ValidationSummary()
        </p>
    </div>

</form>
