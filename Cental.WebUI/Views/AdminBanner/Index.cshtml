@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Banner Area";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}



<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td> <img src="@item.ImageUrl" style="width:75px; height:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><button onclick="deleteBanner(@item.BannerId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateBanner" asp-route-id="@item.BannerId" class="btn btn-info"><i class="fa fa-pen"></i> </a> </td>

        </tr>
    }
</table>
<a asp-action="CreateBanner" asp-controller="AdminBanner" class="btn btn-primary"><i class="fa fa-plus"></i> Add a new Feature Section</a>


<script>

        function deleteBanner(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminBanner/DeleteBanner/" + id;


                }
            });

        }


</script>
