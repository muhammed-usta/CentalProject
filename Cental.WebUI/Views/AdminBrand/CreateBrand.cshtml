@model CreateBrandDto
@{
    ViewData["Title"] = "Add a New Brand";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <label>Brand Name</label>
    <input type="text" asp-for="BrandName" class="form-control" />
    <span asp-validation-for="BrandName" class="text-danger"></span>
    <br />
    <button class="btn btn-outline-primary"> <i class="fa fa-save"></i> Submit</button>
</form>
