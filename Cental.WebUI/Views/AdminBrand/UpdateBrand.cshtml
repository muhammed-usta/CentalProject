@model UpdateBrandDto
@{
    ViewData["Title"] = "Update Brand";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="BrandId" />
    <label>Brand Name</label>
    <input type="text" asp-for="BrandName" class="form-control" />
    <span asp-validation-for="BrandName" class="text-danger"></span>
    
    <br />

    <button class="btn btn-outline-primary">Update</button>

</form>


