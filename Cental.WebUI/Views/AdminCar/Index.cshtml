@model List<Car>
@{
    ViewData["Title"] = "Cars";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Brand</th>
        <th>Model Name</th>
        <th>Model Year</th>
        <th>Kilometer</th>
     
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.ModelName</td>
            <td>@item.Year</td>
            <td>@item.Kilometer</td>

            <td><button onclick="deleteCar(@item.CarId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateCar" asp-route-id="@item.CarId" class="btn btn-info"><i class="fa fa-pen"></i> </a> </td>

        </tr>
    }
</table>
<a asp-action="CreateCar" asp-controller="AdminCar" class="btn btn-primary"><i class="fa fa-plus"></i> Add a new Car </a>

<script>

        function deleteCar(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminCar/DeleteCar/" + id;


                }
            });


        }


</script>

