@model List<ResultContactDto>
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Adress</th>
        <th>Mail</th>
        <th>Telephone</th>
        <th>Website Url</th>
        <th>Open Day</th>
        <th>Off Day</th>
        <th>Open Time</th>
        <th>Close Time</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
            <tr>
                <td>@count</td>
                <td>@item.Adress</td>
                <td>@item.Mail</td>
                <td>@item.Telephone</td>
                <td>@item.WebsiteUrl</td>
                <td>@item.OpenDay</td>
                <td>@item.OffDay</td>
                <td>@item.OpenTime</td>
                <td>@item.CloseTime</td>
                <td><button onclick="deleteContact(@item.ContactId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
                <td><a asp-action="UpdateContact" asp-route-id="@item.ContactId" class="btn btn-info"><i class="fa fa-pen"></i> </a> </td>

            </tr>
    }
</table>
<a asp-action="CreateContact" asp-controller="AdminContact" class="btn btn-primary"><i class="fa fa-plus"></i> Add a new Contact Section</a>


<script>

        function deleteContact(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminContact/DeleteContact/" + id;


                }
            });

        }


</script>


