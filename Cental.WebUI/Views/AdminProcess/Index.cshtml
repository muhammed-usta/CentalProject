@model List<ResultProcessDto>
@{
    ViewData["Title"] = "Process";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><button onclick="deleteProcess(@item.ProcessId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateProcess" asp-route-id="@item.ProcessId" class="btn btn-info"><i class="fa fa-pen"></i> </a> </td>

        </tr>
    }
</table>
<a asp-action="CreateProcess" asp-controller="AdminProcess" class="btn btn-primary"><i class="fa fa-plus"></i> Add a new Process Section</a>


<script>

        function deleteProcess(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminProcess/DeleteProcess/" + id;


                }
            });

        }


</script>

