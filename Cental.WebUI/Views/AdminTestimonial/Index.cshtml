@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Name</th>
        <th>Title</th>
        <th>Review</th>
        <th>Comment</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td> <img src="@item.ImageUrl" style="width:75px; height:75px" /></td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Review</td>
            <td>@item.Comment</td>
            <td><button onclick="deleteTestimonial(@item.TestimonialId)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateTestimonial" asp-route-id="@item.TestimonialId" class="btn btn-info"><i class="fa fa-pen"></i> </a> </td>

        </tr>
    }
</table>
<a asp-action="CreateTestimonial" asp-controller="AdminTestimonial" class="btn btn-primary"><i class="fa fa-plus"></i> Add a new Testimonial Section</a>


<script>

        function deleteTestimonial(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/AdminTestimonial/DeleteTestimonial/" + id;


                }
            });

        }


</script>



