@model List<ResultRoleDto>
@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}


@{
    int count = 0;
}

<div class="alert alert-info">
    <h5>For the proper functioning of the site, the role names should be as follows: <strong>Admin, Manager, User</strong></h5>
</div>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Role</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name</td>
            <td><button onclick="deleteRole(@item.Id)" class="btn btn-danger"> <i class="fa fa-trash"></i> </button></td>
            <td><a asp-action="UpdateRole" asp-route-id="@item.Id" class="btn btn-info"><i class="fa fa-pen"></i>  </a> </td>
        </tr>
    }
</table>

<a asp-action="CreateRole" asp-controller="Role" class="btn btn-primary"><i class="fa fa-plus-circle"></i> Add a New Role</a>


<script>

        function deleteRole(id){

            Swal.fire({
                title: "Are you sure you want to delete this?",
                text: "You cannot undo this action!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Delete It!",
                cancelButtonText:"Cancel"
            }).then((result) => {
                if (result.isConfirmed) {
    window.location.href = "/Role/DeleteRole/" + id;


                }
            });


        }


</script>