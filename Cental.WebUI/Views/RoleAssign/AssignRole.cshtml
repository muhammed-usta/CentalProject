@model List<AssignRoleDto>
@{
    ViewData["Title"] = "Assign Role";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<h3 class="mb-4">Assigning a Role to the User @ViewBag.fullName</h3>

<form method="post">

    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="role-item mb-3 p-3 border rounded shadow-sm" style="max-width: 600px;">

           
            <input type="hidden" asp-for="@Model[i].UserId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="hidden" asp-for="@Model[i].RoleId" />

          
            <div class="form-check d-flex align-items-center">

            
                @if (Model[i].RoleName == "User")
                {
                    <i class="fas fa-user me-3" style="font-size: 1.5rem;"></i>
                }
                else if (Model[i].RoleName == "Manager")
                {
                    <i class="fas fa-user-tie me-3" style="font-size: 1.5rem;"></i>
                }
                else if (Model[i].RoleName == "Admin")
                {
                    <i class="fas fa-user-gear" style="font-size: 1.5rem;"></i>
                }
                else
                {
                    <i class="fas fa-question me-3" style="font-size: 1.5rem;"></i>
                }

               
                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input me-2" />
                <label class="form-check-label" for="@Model[i].RoleExist">
                    @Model[i].RoleName
                </label>
            </div>
        </div>
    }

    <div class="mt-4">
        <button class="btn btn-primary btn-lg px-4 py-2" type="submit">Assign Role</button>
    </div>

</form>
