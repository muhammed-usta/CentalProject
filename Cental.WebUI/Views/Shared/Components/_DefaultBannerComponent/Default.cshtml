@model List<ResultBannerDto>
@*
  _DefaultBannerComponent
*@

<div class="container-fluid banner pb-5 mt-5 wow zoomInDown" data-wow-delay="0.1s">
    <div class="container pb-5">
        @foreach (var item in Model)
        {
            
        <div class="banner-item rounded">
            <img src="@item.ImageUrl" class="img-fluid rounded w-100" alt="">
            <div class="banner-content">
                <h2 class="text-primary">@item.Title</h2>
                <h1 class="text-white">@item.Description</h1>
                <p class="text-white">Don't hesitate and send us a message.</p>
                <div class="banner-btn">
                    <a href="#" class="btn btn-secondary rounded-pill py-3 px-4 px-md-5 me-2">WhatsApp</a>
                    <a href="/Contact/Index" class="btn btn-primary rounded-pill py-3 px-4 px-md-5 ms-2">Contact Us</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>