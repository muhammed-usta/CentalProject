@model List<ResultUserDto>
@*
    _DefaultManagerComponent
*@
<div class="container-fluid team pb-5">
    <div class="container pb-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Customer<span class="text-primary"> Advisors</span> </h1>
            <p class="mb-0">
                Our staff will take close care of you
            </p>
        </div>
        <div class="row g-4">
                 @foreach (var item in Model)
            {
                
            <div class="col-md-6 col-lg-6 col-xl-3 wow fadeInUp" data-wow-delay="0.1s">
                <div class="team-item p-4 pt-0">
                    <div class="team-img">
                        <img src="@item.ImageUrl" class="img-fluid rounded w-100" alt="Image">
                    </div>
                    <div class="team-content pt-4">
                        <h4>@item.FullName</h4>
                        <p>Customer Advisors</p>
                        <div class="team-icon d-flex justify-content-center">

                            @foreach (var social in item.UserSocials)
                                {
                                    <a class="btn btn-square btn-light rounded-circle mx-1" href="@social.SocialMediaUrl" target="_blank"><i class="fab @social.Icon"></i></a>
                                }    
                           
                            
                        </div>
                    </div>
                </div>
            </div>
            } 
     
        </div>
    </div>
</div>