@model List<ResultServiceDto>
@*
    _DefaultServiceComponent
*@

<section id="service">
</section>

<div class="container-fluid service py-5">
    <div class="container py-5">
        <div class="text-center mx-auto pb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 800px;">
            <h1 class="display-5 text-capitalize mb-3">Cental <span class="text-primary">Services</span></h1>
            <p class="mb-0">
                We offer a wide range of services designed to meet your needs. Whether you are looking for a simple car rental, special rates, or additional travel insurance, we have got you covered. Our services include one-way rentals, city-to-city travel options, and a variety of vehicles for every occasion. Enjoy the freedom of traveling with ease and comfort, knowing you have access to reliable, cost-effective transportation solutions tailored to your preferences.
            </p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model)
            {
                
            <div class="col-md-6 col-lg-4 wow fadeInUp" data-wow-delay="0.1s">
                <div class="service-item p-4">
                    <div class="service-icon mb-4">
                        <i class="@item.Icon"></i>
                    </div>
                    <h5 class="mb-3">@item.Title</h5>
                    <p class="mb-0">@item.Description</p>
                </div>
            </div>
            }
          
        </div>
    </div>
</div>