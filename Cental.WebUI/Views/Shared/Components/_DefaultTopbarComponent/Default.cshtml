@model ResultContactDto
@*
_DefaultTopbarComponent
*@
<div class="container-fluid topbar bg-secondary d-none d-xl-block w-100">
    <div class="container">
        <div class="row gx-0 align-items-center" style="height: 45px;">
            <div class="col-lg-6 text-center text-lg-start mb-lg-0">
                <div class="d-flex flex-wrap">
                    <a href="@Model.MapUrl" target="_blank" class="text-muted me-4">
                        <i class="fas fa-map-marker-alt text-primary me-2"></i>Find A Location
                    </a>

                    <a href="tel:@Model.Telephone" class="text-muted me-4"><i class="fas fa-phone-alt text-primary me-2"></i>+@Model.Telephone</a>
                    <a href="mailto:@Model.Mail" class="text-muted me-0"><i class="fas fa-envelope text-primary me-2"></i>@Model.Mail</a>
                </div>
            </div>
            <div class="col-lg-6 text-center text-lg-end">
                <div class="d-flex align-items-center justify-content-end">
                    @foreach (var item in ViewBag.topbarSocial)
                    {
                        <a href="@item.Url" class="btn btn-light btn-sm-square rounded-circle me-3"><i class="fab @item.Icon"></i></a>

                    }
                    <a href="/Login/Index" class="btn btn-light btn-sm-square rounded-circle me-0"><i class="fas fa-user-tie"></i></a>

                </div>
            </div>

        </div>
    </div>
</div>

